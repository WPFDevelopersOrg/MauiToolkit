    </FlyoutItem>

    <FlyoutItem Title="Settings"  FlyoutIcon="im_search.png">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="SettingsRouter" />
    </FlyoutItem>-->

    <ShellContent
        Title="Home"
        Icon="im_home.png"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomeRouter" />
    <ShellContent
        Title="Apply"
        Icon="im_apply.png"
        ContentTemplate="{DataTemplate views:ApplyPage}"
        Route="ApplyRouter" />
    <ShellContent
        Title="Result"
        Icon="im_result.png"
        ContentTemplate="{DataTemplate views:ResultPage}"
        Route="ResultRouter" />
    <ShellContent
        Title="Settings"
        Icon="im_search.png"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsRouter" />

