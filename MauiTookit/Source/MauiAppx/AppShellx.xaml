    <Shell.FlyoutFooter>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Xaminals"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
            <Label Grid.Row="1" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{0:MMMM dd, yyyy}'}"
               HorizontalOptions="Center" />
        </Grid>
    </Shell.FlyoutFooter>

</Shell>

